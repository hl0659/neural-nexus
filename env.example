# ============================================================================
# Neural Nexus v3.0 - Environment Configuration Template
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://postgres:admin@localhost:5432/neural_nexus_v3

# ============================================================================
# RIOT API KEYS
# ============================================================================
# APEX Key - High elo focused (Challenger/Grandmaster)
RIOT_API_KEY_APEX=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# NEXUS Key - Network expansion (Master and below)
RIOT_API_KEY_NEXUS=RGAPI-yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy

# ============================================================================
# COLLECTION SETTINGS
# ============================================================================
# Regions to collect from (comma-separated)
REGIONS=na1,euw1,kr

# How many matches to fetch per player (DEEP collection)
MATCH_HISTORY_DEPTH=200

# Tier boundaries for APEX service
APEX_TIERS=CHALLENGER,GRANDMASTER

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
DATA_PATH=F:/neural_nexus_data_v3
LOG_PATH=F:/neural_nexus_data_v3/logs

# ============================================================================
# RATE LIMITING (per key, per region, per 2 minutes)
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=120

# ============================================================================
# COORDINATION SETTINGS
# ============================================================================
# How often to check for new work (seconds)
APEX_POLL_INTERVAL=5
NEXUS_POLL_INTERVAL=10

# Match lock expiry (minutes)
MATCH_LOCK_EXPIRY_MINUTES=60
